<header class="hero" role="region" aria-label="Shop hero">
  <div class="container hero__inner">
    <div class="hero__content">
      <p class="hero__title">Your one-stop shop for unique and handcrafted items.</p>

      <div class="hero__actions">
        <button class="primary" href="/sales">View Sales</button>
        <!-- <a class="btn btn--ghost" href="/shop/new">New Arrivals</a> -->
      </div>
    </div>

    <div class="hero__media">
      <% if (products && products.length) { %>
        <figure class="hero__stage">
          <div class="hero__frame">
            <img
              src=""
              alt="Featured product from Raven's Treasures"
              decoding="async"
              loading="eager">
          </div>

          <!-- Indicators below the image -->
          <div class="carousel__indicators" role="tablist" aria-label="Slide indicators">
            <% products.forEach((p, i) => { %>
              <button
                class="carousel__indicator <%= i === 0 ? 'is-active' : '' %>"
                role="tab"
                aria-selected="<%= i === 0 ? 'true' : 'false' %>"
                aria-controls="carousel-slide-<%= i %>"
                data-slide="<%= i %>"
                data-src="<%= p.image.url %>"
                data-alt="<%= p.image.alt || 'Featured product' %>"
                data-href="/shop/<%= p.slug || p.id %>"
                data-caption="<%= p.name || '' %>">
                <span class="carousel__indicator-bar"></span>
              </button>
            <% }) %>
          </div>
        </figure>
      <% } else { %>
        <div class="hero__empty">No featured products yet. Check back soon.</div>
      <% } %>
    </div>
    
  </div>
</header>
