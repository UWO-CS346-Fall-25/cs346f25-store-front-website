<%- include('./../svg/icon-sprites') %>

<header class="site-header" role="banner">
  <div class="container nav-inner">
    <a href="/" class="brand" aria-label="Home">
      <img src="/images/RavensTreasures_Logo.png" alt="Raven's Treasures logo" decoding="async" loading="eager">
      <span class="brand-title"><%- siteName %></span>
    </a>

    <nav id="primary-nav" class="nav" aria-label="Primary">
      <ul class="nav-list" role="list">
        <%- include('navbar-link', { path: '/' , link_title: 'Shop', icon: 'shop', onMobile: true }) %>

        <% if (isAdmin) { %>
          <%- include('navbar-link', { path: '/admin/products' , link_title: 'Admin', icon:'admin', onMobile: true }) %>
        <% } else { %>
          <%- include('navbar-link', { path: '/contact' , link_title: 'Contact', icon: 'contact', onMobile: false }) %>
        <% } %>
        <% if (cartCount > 0) { %>
          <%- include('navbar-link', { path: '/cart' , link_title: 'Cart', icon:'cart', onMobile: true, count: cartCount }) %>
        <% } %>

        <% if (user !=null) { %>
          <% if(!isAdmin) { %>
            <%- include('navbar-link', { path: '/account' , link_title: 'Account', icon:'account', onMobile: true }) %>
          <% } %>
          <%- include('navbar-logout') %>
        <% } else { %>
          <%- include('navbar-link', { path: '/login' , link_title: 'Login', icon:'login', onMobile: true }) %>
          <%- include('navbar-link', { path: '/signup' , link_title: 'Sign up', icon:'sign-up', onMobile: true }) %>
        <% } %>
      </ul>
    </nav>
  </div>
</header>