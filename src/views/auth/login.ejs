<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head', { cssFiles: ['auth.css' ], scripts: ['auth-login.js', 'auth-common.js' ]}) %>

  <body>
    <%- include('../partials/navbar') %>

      <main class="section" aria-labelledby="login-heading">
        <div class="container container--narrow">
          <h1 id="login-heading">
            <%= 'Log in' %>
          </h1>
          <p class="lead">Welcome back! Enter your details to continue.</p>

          <!-- Optional flash placeholders -->
          <% if (flash && flash.error) { %>
            <div class="alert alert--error" role="alert">
              <%= flash.error %>
            </div>
            <% } %>

              <form class="auth-form" action="/auth/login" method="post">
                <% if (csrfToken) { %>
                  <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                  <% } %>

                    <div class="form-row">
                      <div>
                        <label for="email">Email</label>
                        <input id="email" name="email" type="email" autocomplete="email" required>
                      </div>
                    </div>

                    <div class="form-row">
                      <div class="password-field">
                        <label for="password">Password</label>
                        <div class="password-input">
                          <input id="password" name="password" type="password" autocomplete="current-password" required>
                          <button type="button" class="password-toggle" aria-label="Show password" aria-pressed="false"
                            data-target="password">
                            <!-- eye (open) -->
                            <svg class="icon-eye" width="20" height="20" viewBox="0 0 24 24" aria-hidden="true">
                              <path
                                d="M12 5c-5.5 0-9.5 4.5-10 6.5.5 2 4.5 6.5 10 6.5s9.5-4.5 10-6.5C21.5 9.5 17.5 5 12 5zm0 10a3.5 3.5 0 1 1 0-7 3.5 3.5 0 0 1 0 7z" />
                              <circle cx="12" cy="11.5" r="1.8" />
                            </svg>
                            <!-- eye (off) -->
                            <svg class="icon-eye-off" width="20" height="20" viewBox="0 0 24 24" aria-hidden="true">
                              <path
                                d="M3 3l18 18-1.4 1.4-3-3A11.9 11.9 0 0 1 12 18c-5.5 0-9.5-4.5-10-6.5a12.7 12.7 0 0 1 4.2-4.6L1.6 4.4 3 3zm14.5 12.1l-2.2-2.2a3.5 3.5 0 0 1-4.2-4.2L8.9 6.5m3.1-.9c5.5 0 9.5 4.5 10 6.5-.2.7-1 1.9-2.2 3.2M12 8a3.5 3.5 0 0 1 3.5 3.5" />
                            </svg>
                          </button>
                        </div>
                        <div class="auth-actions">
                          <label class="checkbox">
                            <input type="checkbox" name="remember" value="1"> Remember me
                          </label>
                          <a class="link" href="/forgot">Forgot password?</a>
                        </div>
                      </div>
                    </div>


                    <div class="form-row">
                      <button class="primary" type="submit">Log in</button>
                    </div>

                    <p class="muted">Don't have an account? <a class="link" href="/signup">Sign up</a></p>
              </form>
        </div>
      </main>




      <!-- TODO: Newsletter? / Footer-->
      <%- include('../partials/footer') %>
  </body>

</html>