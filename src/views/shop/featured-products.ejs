<section class="section" aria-labelledby="featured-heading">
  <div class="container">
    <%- include('../partials/category-title', { title: 'Featured' , url: '/shop' , urlText: 'View all →' }) %>

      <% if (featuredProducts && featuredProducts.length) { %>
        <div class="hscroll" data-hscroll>
          <button class="hscroll__nav hscroll__nav--prev" type="button" aria-label="Scroll left"
            data-hscroll-prev>‹</button>
          <button class="hscroll__nav hscroll__nav--next" type="button" aria-label="Scroll right"
            data-hscroll-next>›</button>

          <ul class="hscroll__track" role="list">
            <% featuredProducts.forEach(function (p) { %>
              <li class="hscroll__item">
                <%- include('product-card', { product: p, url: p.url, price: p.price }) %>
              </li>
              <% }) %>
          </ul>

        </div>
        <% } else { %>
          <p class="muted">No featured products yet. Check back soon.</p>
          <% } %>
  </div>
</section>